{
  "swagger": "2.0",
  "info": {
    "title": "CEP-middlware",
    "version": "0.0",
    "contact": {
      "email": "drobniac@gmail.com"
    },
    "description": "This will be a Web API (maybe even REST) with the purpose of delegating requests to various supported CEP engines."
  },
  "basePath": "/v1",
  "schemes": [
    "http"
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Provides possible operations within the API",
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },
    "/engines": {
      "get": {
        "summary": "Returns all available CEP engines",
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },
    "/engines/{engineId}": {
      "get": {
        "summary": "Returns concrete engine info or available actions and such",
        "parameters": [
          {
            "name": "engineId",
            "required": true,
            "in": "path",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "404": {
            "description": "Requested CEP engine does not exist"
          }
        }
      }
    },
    "/engines/{engineId}/rules": {
      "get": {
        "summary": "Returns all rules within the engine",
        "parameters": [
          {
            "name": "engineId",
            "required": true,
            "in": "path",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },
    "/engines/{engineId}/rules/{ruleId}": {
      "get": {
        "summary": "Returns a single rule within the engine",
        "parameters": [
          {
            "name": "engineId",
            "required": true,
            "in": "path",
            "type": "string"
          },
          {
            "name": "ruleId",
            "required": true,
            "in": "path",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "404": {
            "description": "Requested rule does not exist within the given engine"
          }
        }
      },
      "post": {
        "summary": "Create a single rule within the engine",
        "parameters": [
          {
            "name": "engineId",
            "required": true,
            "in": "path",
            "type": "string"
          },
          {
            "name": "ruleId",
            "required": true,
            "in": "path",
            "type": "string"
          },
          {
            "name": "rule",
            "required": true,
            "in": "body",
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "Rule successfully created"
          },
          "405": {
            "description": "A rule with the given Id already exists for the given engine, thus the creation failed"
          }
        }
      }
    }
  }
}