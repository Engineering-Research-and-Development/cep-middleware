{
  "swagger": "2.0",
  "info": {
    "title": "cep-middleware",
    "version": "1.0",
    "contact": {
      "email": "drobniac@gmail.com"
    },
    "description": "This Web API has the purpose of delegating requests to various supported CEP engines while also defining a unique interface for CEP Engine consumption"
  },
  "tags": [
    {
      "name": "base"
    },
    {
      "name": "engines"
    },
    {
      "name": "engineRules"
    },
    {
      "name": "engineEvents"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Provides possible operations within the API",
        "tags": [
          "base"
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },
    "/engines": {
      "get": {
        "summary": "Returns all available CEP engines",
        "tags": [
          "engines"
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      },
      "post": {
        "summary": "Add a CEP engine",
        "tags": [
          "engines"
        ],
        "parameters": [
          {
            "name": "engine",
            "required": true,
            "in": "body",
            "schema": {
              "$ref": "#/definitions/CEPEngine"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      },
      "put": {
        "summary": "Update properties of a specified engine",
        "tags": [
          "engines"
        ],
        "parameters": [
          {
            "name": "engine",
            "required": true,
            "in": "body",
            "schema": {
              "$ref": "#/definitions/CEPEngine"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "404": {
            "description": "Requested CEP engine does not exist"
          }
        }
      }
    },
    "/engines/{engineId}": {
      "get": {
        "summary": "Returns info about the engine",
        "tags": [
          "engines"
        ],
        "parameters": [
          {
            "name": "engineId",
            "required": true,
            "in": "path",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "404": {
            "description": "Requested CEP engine does not exist"
          }
        }
      },
      "delete": {
        "summary": "Remove a CEP engine",
        "tags": [
          "engines"
        ],
        "parameters": [
          {
            "name": "engineId",
            "required": true,
            "in": "path",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "404": {
            "description": "Requested CEP engine does not exist"
          }
        }
      }
    },
    "/engines/{engineId}/rules": {
      "get": {
        "summary": "Returns all rules within the engine",
        "tags": [
          "engineRules"
        ],
        "parameters": [
          {
            "name": "engineId",
            "required": true,
            "in": "path",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "404": {
            "description": "CEP engine doesn't exist"
          }
        }
      },
      "post": {
        "summary": "Create a single rule within the engine",
        "tags": [
          "engineRules"
        ],
        "parameters": [
          {
            "name": "engineId",
            "required": true,
            "in": "path",
            "type": "string"
          },
          {
            "name": "rule",
            "required": true,
            "in": "body",
            "schema": {
              "$ref": "#/definitions/Rule"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Rule successfully created"
          },
          "400": {
            "description": "Rule doesn't exist or the engine doesn't exist"
          },
          "405": {
            "description": "A rule with the given Id already exists for the given engine, thus the creation failed"
          }
        }
      }
    },
    "/engines/{engineId}/rules/{ruleId}": {
      "get": {
        "summary": "Returns a single rule within the engine",
        "tags": [
          "engineRules"
        ],
        "parameters": [
          {
            "name": "engineId",
            "required": true,
            "in": "path",
            "type": "string"
          },
          {
            "name": "ruleId",
            "required": true,
            "in": "path",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "404": {
            "description": "Requested rule doesn't exist or the engine doesn't exist"
          }
        }
      },
      "delete": {
        "summary": "Removes a single rule from the engine",
        "tags": [
          "engineRules"
        ],
        "parameters": [
          {
            "name": "engineId",
            "required": true,
            "in": "path",
            "type": "string"
          },
          {
            "name": "ruleId",
            "required": true,
            "in": "path",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "404": {
            "description": "Requested rule doesn't exist within the given engine or the engine doesn't exist"
          }
        }
      },
      "put": {
        "summary": "Modify a single rule within the engine",
        "tags": [
          "engineRules"
        ],
        "parameters": [
          {
            "name": "engineId",
            "required": true,
            "in": "path",
            "type": "string"
          },
          {
            "name": "ruleId",
            "required": true,
            "in": "path",
            "type": "string"
          },
          {
            "name": "rule",
            "required": true,
            "in": "body",
            "schema": {
              "$ref": "#/definitions/Rule"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Rule successfully modified"
          },
          "404": {
            "description": "Requested rule doesn't exist within the given engine or the engine doesn't exist"
          }
        }
      }
    },
    "/engines/{engineId}/rules/{ruleId}/enabled": {
      "get": {
        "summary": "Returns if the rule is enabled within the engine",
        "tags": [
          "engineRules"
        ],
        "parameters": [
          {
            "name": "engineId",
            "required": true,
            "in": "path",
            "type": "string"
          },
          {
            "name": "ruleId",
            "required": true,
            "in": "path",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns if the rule is enabled or not"
          },
          "404": {
            "description": "Rule doesn't exist or the engine doesn't exist"
          }
        }
      },
      "put": {
        "summary": "Enable or Disable a rule within an engine",
        "tags": [
          "engineRules"
        ],
        "parameters": [
          {
            "name": "engineId",
            "required": true,
            "in": "path",
            "type": "string"
          },
          {
            "name": "ruleId",
            "required": true,
            "in": "path",
            "type": "string"
          },
          {
            "name": "enableSwitch",
            "required": true,
            "in": "body",
            "schema": {
              "$ref": "#/definitions/Rule"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The rule has been successfully enabled/disabled"
          },
          "404": {
            "description": "Rule doesn't exist or the engine doesn't exist"
          }
        }
      }
    },
    "/engines/{engineId}/events": {
      "post": {
        "summary": "Send an event to a CEP engine",
        "tags": [
          "engineEvents"
        ],
        "parameters": [
          {
            "name": "engineId",
            "required": true,
            "in": "path",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Event was successfully sent to an engine"
          },
          "404": {
            "description": "Engine doesn't exist"
          }
        }
      }
    }
  },
  "definitions": {
    "Rule" : {
      "type": "object",
      "properties": {
        "ruleId": {
          "type": "string",
          "example": "Kx5i9aC2"
        },
        "description": {
          "type": "string",
          "example": "This rule states that an event of type X triggers Y"
        },
        "statement": {
          "type": "string",
          "example": "select * from ev=iotEvent"
        }
      }
    },
    "CEPEngine": {
      "type": "object",
      "properties": {
        "engineId": {
          "type": "string",
          "example": "perseo-core-test"
        },
        "engineType": {
          "type": "string",
          "example": "PerseoCore"
        },
        "hostUrl": {
          "type": "string",
          "example": "http://www.wryyyyy.com"
        }
      }
    }
  }
}